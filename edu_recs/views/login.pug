extends layout

block content
    .w3-card-4
          header.w3-container.w3-teal
            h3.w3-left Login
    .w3-container   
      form(method='POST', action='/login')
        #form-group
          label Email
          input.form-control(name='email', type='email')
        #form-group
          label Password
          input.form-control(name='password', type='password')
        br
        if m != null
          .w3-panel.w3-yellow
            p= m
        input.btn.btn-primary(type='submit', value='Login')
