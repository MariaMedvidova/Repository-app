extends layout

block content
    .w3-card-4
          header.w3-container.w3-teal
            h3.w3-left Login
    .w3-container   
      form(method='POST', action='/login')
        #form-group
          label.w3-text-teal 
           b Email
          input.w3-input.x3-border.w3-light-grey.form-control(name='email', type='email')
        #form-group
          label.w3-text-teal 
           b Password
          input.w3-input.x3-border.w3-light-grey.form-control(name='password', type='password')
        br
        if m != null
          .w3-panel.w3-yellow
            p= m
        input.btn.w3-btn.w3-blue-grey(type='submit', value='Login')
