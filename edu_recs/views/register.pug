extends layout

block content
  nav.breadcrumb 
    ol.breadcrumb 
      li(class="breadcrumb-item")
        a(href="/") Home
      li(class="breadcrumb-item active" aria-current="page") Register
  .container.my-5
    .row
      .col-10.offset-1.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        .card.shadow
          img(src="https://images.unsplash.com/photo-1464865885825-be7cd16fad8d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1950&q=80" alt="login" class="card-img-top" style="height: 10rem;")
          .card-body
            h5.card-title User Registration
            form(method='POST', action='/register')
              #form-group
                label Name
                input.form-control(name='name', type='text' required autofocus)
              #form-group
                label Course
                input.form-control(name='course', type='text' required)
              #form-group
                label Email
                input.form-control(name='email', type='email' required)
              #form-group
                label Username
                input.form-control(name='username', type='text')
              #form-group
                label Password
                input.form-control(name='password', type='password' required)
              br
              input.btn.btn-success(type='submit', value='Submit')
            a.btn(href="/authenticate/facebook" style="background: #3B5998; color: white;")
              i.fa.fa-facebook  Register with Facebook
            a.btn(href="/authenticate/google" style="  background: #dd4b39;color: white;")
              i.fa.fa-google-plus  Register with Google+