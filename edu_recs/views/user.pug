extends layout

block content
  nav.breadcrumb 
    ol.breadcrumb 
      li(class="breadcrumb-item")
        a(href="/") Home
      li(class="breadcrumb-item active" aria-current="page") My profile
  .container.my-5
    .row
      .col-10.offset-1.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        .card.shadow
          .card-body
            h5.card-title.d-inline My profile
            a.btn.w3-btn.w3-teal.w3-margin.d-inline(class='button' href='/user/'+ user._id +'/edit') 
                  i.fa.fa-edit  Edit profil
            form.d-inline(method='POST', action='/user/'+ user._id +'?_method=DELETE')
                  input.btn.w3-btn.w3-teal(type='submit', value='Delete profil')
            table.table 
              tr 
                th(scope='row') Name
                td= user.name
              tr 
                th(scope='row') Email
                td= user.email
              -if(user.level == "admin")
                tr 
                  th(scope='row') Level
                  td= user.level
              tr 
                th(scope='row') Registration date
                td= user.registrationDate
              -if(user.course)
                tr 
                  th(scope='row') Course
                  td= user.course